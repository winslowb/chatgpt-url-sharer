{
  "manifest_version": 3,
  "name": "Copy URL to ChatGPT",
  "version": "1.3",
  "description": "Copies the current tab URL to clipboard and opens ChatGPT",
  "permissions": ["tabs", "scripting", "activeTab", "clipboardWrite"],
  "action": {
    "default_title": "Copy URL & Open ChatGPT",
    "default_icon": "icon.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": ["<all_urls>"],
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}

